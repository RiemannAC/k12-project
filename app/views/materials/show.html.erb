<div class="main-frame">
  <div class="">
    <%= link_to '編輯資料夾設定', edit_user_material_path(@user,@material), class: 'btn btn-outline-primary btn-sm' %>
    <%= link_to '刪除資料夾', user_material_path(@user,@material), class: 'btn btn-danger btn-sm pull-right', method: :delete, data: {confirm: "資料夾裡的檔案也會一併刪除，你確定嗎？"} %>
  </div>
  <br>
  <h4 style="color:#9d586a">教材科目: <%= @material.subject_tag.name %></h4>
  <h4 style="color:#9d586a">資料夾名稱: <%= @material.mtrial_folder_name %></h4>
  <%= link_to '<< 全部資料夾', user_materials_path %>
  <hr class="blue-hr">
 
  <%= form_for [@user,@material,@teachingfile], html:{multipart:true} do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "自訂檔案名稱" %>
    </div>

    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
    </div>

    <%= f.submit "Upload", class:"btn btn-primary" %>

  <% end %>
  
