  <h4>科目： <%= @subject.name %></h4>  
  <h4>班級： <%= @subject.classroom %>（<%= @subject.students %> 人）</h4>
  <%= link_to '<< 班級列表', user_subjects_path(@user) %>

  <hr class="blue-hr">


  <div class="row">
