<div class="container">
  <% if params[:plan_id] %>
    <%= form_for [@user,@plan,@teachingfile], url: user_plan_teachingfile_path ,html:{multipart:true} do |f| %>
      <div class="form-group">
        <%= f.label :name, '重設檔案名稱' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "輸入檔案名稱" %>
      </div>

      <div class="form-group">
        <%= f.label :attachment, '上傳附件' %>
        <%= f.file_field :attachment %><br>
        <%= '【現有檔案：'+ @teachingfile.attachment.file.filename+'】' if @teachingfile.attachment? %>
      </div>

      <div class="form-group">
        <%= f.label :topic_id, '加到主題卡片' %>
        <%= f.collection_select :topic_id , Topic.all, :id ,:name, {prompt: true}, {class: ""}  %><br>     
      </div>

      <%= f.submit '更新', class:"btn btn-primary" %>
      <%= link_to '返回',user_plan_path(@user,@plan),class:"btn btn-success"  %>
    <% end %>

  <% elsif params[:material_id] %>
    <%= form_for [@user,@material,@teachingfile], url: user_material_teachingfile_path ,html:{multipart:true} do |f| %>
      <div class="form-group">
        <%= f.label :name, '重設檔案名稱' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "輸入檔案名稱" %>
      </div>

      <div class="form-group">
        <%= f.label :attachment, '上傳附件' %>
        <%= f.file_field :attachment %><br>
        <%= '【現有檔案：'+ @teachingfile.attachment.file.filename+'】' if @teachingfile.attachment? %>
      </div>

      <div class="form-group">
        <%= f.label :topic_id, '加到主題卡片' %>
        <%= f.collection_select :topic_id , Topic.all, :id ,:name, {prompt: true}, {class: ""}  %><br>     
      </div>


      <%= f.submit '更新',  class:"btn btn-primary" %>
      <%= link_to '返回',user_material_path(@user,@material),class:"btn btn-success"  %>
    <% end %>

  <% end %>
</div> 



