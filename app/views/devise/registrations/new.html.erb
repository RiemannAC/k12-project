<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <div class="devise-card">
      <div class="login-container theme-color">
        <h1 class="text-center">Sign up</h1>
      </div>

      <div class="login-container-in">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: 'login-input' %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: 'login-input' %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'login-inupt' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'login-input' %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-lg theme-color' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>            
      </div>
    </div>
  </div>
</div>

