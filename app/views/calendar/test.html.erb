<%= stylesheet_link_tag "calendar/fullcalendar.css" %>
<%= javascript_include_tag "js/vendor/moment.min.js" %>
<%= javascript_include_tag "js/vendor/fullcalendar.js" %>
<%= javascript_include_tag "js/index.js" %>


<div class="container-fluid row">
  <div id='calendar1' class='calendar col-md-6'></div>
  <div id='calendar2' class='calendar col-md-6'></div>
</div>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new_event">
      新增todo
</button>

<div class="modal fade" id="new_event">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create New Event</h4>
      </div>
      <div class="modal-body">
        <%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %>
  </div>

  <div class="field">
    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>      </div>
    </div>
  </div>
</div>
