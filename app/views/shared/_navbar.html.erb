          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <ul class="navbar-nav nav-user">
          <%= link_to do %>
            <%= fa_icon "user 2x", style: 'color:green' %>
          <% end %>
