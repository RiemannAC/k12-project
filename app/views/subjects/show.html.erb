    <div class="col-md-10">
      <div id="container_posts">
        <% if @subject.classrooms.count <= 1 %>
          <h5>新增卡片請點擊上方的「新增教學計畫」</h5>
            <% @subject.classrooms.each do |classroom|%>  
            <%= render partial:'classrooms/classroom',locals: {classroom: classroom } %>
          <% end %>
        <% else %> 
          <% @subject.classrooms.each do |classroom|%>  
            <%= render partial:'classrooms/classroom',locals: {classroom: classroom } %>
          <% end %>
        <% end %>  
      </div>

    </div>

  </div>

</div>