<%= render partial:"shared/sidebar" %> 
<div class="main-frame">
  <div class="">
    <%= link_to '編輯資料夾設定', edit_user_plan_path(@plan.user, @plan), class: 'btn btn-outline-primary btn-sm' %>
    <%= link_to '刪除資料夾', user_plan_path(@plan.user,@plan), class: 'btn btn-danger btn-sm pull-right', method: :delete, data: {confirm: "資料夾裡的檔案也會一併刪除，你確定嗎？"} %>
  </div>

  <br>
  <h4 style="color:#55a578">教案科目: <%= @plan.subject_tag.name %></h4>
  <h4 style="color:#55a578">資料夾名稱: <%= @plan.plan_folder_name %></h4> 
  <%= link_to '<< 全部資料夾', user_plans_path %>
  <hr class="blue-hr">
   
  <%= form_for [@plan.user,@plan,@teachingfile], html:{multipart:true} do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "自訂檔案名稱" %>
    </div>

    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
    </div>

    <%= f.submit "Upload", class:"btn btn-primary" %>

  <% end %>

  <br>

  <table class="table table-hover">
    <h3 style="color:#45785b">Folder Content</h3>
    <% @plan.teachingfiles.each do |teachingfile| %>
    <tr>
      <td style="padding-right:20px;"><%= teachingfile.name %></td>
      <td style="padding-right:20px;">
        <%= link_to teachingfile.attachment_url do%>
          <%= teachingfile.attachment.file.filename %>
          <%= fa_icon 'download 2x', class: 'theme-font' %>
        <% end %>
      </td>
      <td style="padding-right:20px;"><%= link_to 'Edit',edit_plan_teachingfile_path(@plan,teachingfile) %></td>
      <td style="padding-right:20px;"> <%= link_to 'Delete', plan_teachingfile_path(@plan,teachingfile), method: :delete, data: { confirm: "Are you sure?"} %></td>
      
    </tr>
    <% end %>
  </table>
</div>