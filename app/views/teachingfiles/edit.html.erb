<% if params[:plan_id] %>
  <%= form_for [@plan,@teachingfile], url: plan_teachingfile_path ,html:{multipart:true} do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "輸入檔案名稱" %>
    </div>

    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment %><br>
      <%= '【現有檔案：'+ @teachingfile.attachment.file.filename+'】' if @teachingfile.attachment? %>
    </div>

    <%= f.submit  class:"btn btn-primary" %>
    <%= link_to 'Back',plan_path(@teachingfile.plan),class:"btn btn-success"  %>
  <% end %>

<% elsif params[:material_id] %>
  <%= form_for [@user,@material,@teachingfile], url: user_material_teachingfile_path ,html:{multipart:true} do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "輸入檔案名稱" %>
    </div>

    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment %><br>
      <%= '【現有檔案：'+ @teachingfile.attachment.file.filename+'】' if @teachingfile.attachment? %>
    </div>

    <%= f.submit  class:"btn btn-primary" %>
    <%= link_to 'Back',user_material_path(@teachingfile.material.user),class:"btn btn-success"  %>
  <% end %>

<% end %> 



