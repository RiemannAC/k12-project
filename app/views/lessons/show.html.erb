<div class="row">
  <div class="col-12">
    <%= render 'shared/msg' %>

    <div class="form-group">
      <h1><%= @lesson.name %></h1>
    </div>

    <div class="form-group">
      <h4><%= @lesson.grade %> <%= @lesson.room %></h4>
    </div>

    <p>
      <strong>Start time:</strong>
      <%= @lesson.start_time %>
    </p>

    
    <%# buttons %>
    <div>
      <%= link_to '編輯', edit_user_lesson_path(@user, @lesson), class: "btn btn-primary" %>
      <%= link_to '刪除', user_lesson_path(@user, @lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to '返回', user_lessons_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<%# 以下為新增的科目內容，只有 lesson 才顯示以下內容 %>
<% if @lesson.event_type == "lesson" %>
  <div class="main-frame">

    <%= link_to '編輯班級設定', edit_user_subject_path(@user, @subject), class: 'btn btn-outline-success' %>
    <span class="text-center">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mynewpost">
        新增教學計劃
      </button>
    </span>

    <br>
    <br>
    <h4>科目： <%= @subject.name %></h4>  
    <h4>班級： <%= @lesson.classroom.name %>（<%= @subject.students %> 人）</h4>
    <%= link_to '<< 班級列表', user_subjects_path(@user) %>

    <hr class="blue-hr">


    <div class="row">
    <!--row-->
      <div class="col-md-10">
        <div id="container_posts">
          <h2>現在可以秀出同科目所有班級</h2>
          <% if @subject.classrooms.count <= 1 %>
            <h5>新增卡片請點擊上方的「新增教學計畫」</h5>
            
          <% else %>  
            <%= @classroom.name %>
            <% @subject.classrooms.each do |classroom|%>  
              <%= render partial:'classrooms/classroom',locals: {classroom: classroom } %>
            <% end %>
          <% end %>  
        </div>

      </div>

    </div>

  </div>
<% end %>