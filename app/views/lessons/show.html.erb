<div class="row">
  <div class="col-12">
    <%= render 'shared/msg' %>

    <div class="form-group">
      <h1><%= @lesson.name %></h1>
    </div>

    <div class="form-group">
      <h4><%= @lesson.classroom %></h4>
    </div>

    <p>
      <strong>Start time:</strong>
      <%= @lesson.start_time %>
    </p>

    
    <%# buttons %>
    <div>
      <%= link_to 'Edit', edit_user_lesson_path(@user, @lesson), class: "btn btn-primary" %>
      <%= link_to 'Destroy', user_lesson_path(@user, @lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to 'Back', user_lessons_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
