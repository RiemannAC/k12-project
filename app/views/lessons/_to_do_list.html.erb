<div class="to_do_head">
  <h4>今日待辦事項 <%= "#{@day.month}""-""#{@day.day}" %></h4>
</div>
<div class="to_do_body">
  <div class="time_box">
    <% 8.upto(18) do |hour| %>
      <div class="day_time">
        <%= Time.parse("#{hour}:00").strftime("%l %P") %>
        <span id="hour-<%= hour %>" class="todo_content">
          <% @todos.each do |todo| %>
            <%- if todo.start_time.hour.between?(hour, hour + 0.9) %>
              <%= link_to user_lesson_path(@user, todo) do %>
                <%= todo.name %>
              <% end %>
            <% end -%>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
</div>
