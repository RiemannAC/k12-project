<div class="main-frame">
  <h1>我的班級管理列表</h1>
  <hr class="blue-hr">
  
  <% if @classrooms.count == 0 %>
    <h3>你還未建立任何班級，趕快來 <%= link_to '建立班級新增課表', new_user_lesson_path(@user) %>！</h3> 
  <% else %> 

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">科目</th>
          <th scope="col">班級</th>
          <th scope="col">學生人數</th>
          <!--th scope="col">學年度</th-->
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= link_to '管理班級', user_classroom_path(@user, classroom) %></td>
          <td></td>
          <td><%= classroom.name %></td>
          <td><%= classroom.student %></td>
          
          <%#= subject.classrooms.pluck(:name).join(', ') %>
          <!--td><%#= subject.start_time.strftime('%Y-%m') %> 學年開始</td-->
      
          <td>
            <%= link_to '編輯班級設定', edit_user_classroom_path(@user, classroom), class: 'btn btn-outline-success' %>
            <%= link_to '刪除學期計劃', user_classroom_path(@user, classroom), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: "此為永久刪除，確定要執行嗎？"} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
   
</div>
