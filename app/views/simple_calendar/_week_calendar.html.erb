<div class="simple-calendar"> 
  <div class="calendar-heading text-center">   
    <%# Ajax 版 link：Rails 5 後禁止直接 params.merge %>
    <%= link_to "Prev", url_for(request.parameters.merge(start_date: date_range.first - 1.day)), remote: true %>
    <span class="calendar-title">Week <%= start_date.strftime("%U").to_i %></span>
    <%= link_to "Next", url_for(request.parameters.merge(start_date: date_range.last + 1.day)), remote: true %> 

    <span class="pull-right">
      <span id="new_button">
        <%= link_to new_user_lesson_path(@user) do %>
          <i class="fa fa-calendar-plus-o" aria-hidden="true" style="font-size: 40px; color: #527a7a; padding-left: 10px;"></i>
        <% end %>
      <span>
      <span>* 點擊加號鍵新增課表</span>
    </span> 
  </div>


  <table class="table weekly-school-table">
    <thead>
      <tr>
        <th><span class="th_head">#</span></th>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="text-center">
            <div>
              <%= t('date.abbr_day_names')[day.wday] %>
            </div> 
  
            <div style="font-size:20px ">
              <%= "#{day.month}" "/" "#{day.day}" %> 
            </div>   
          </th>
        <% end %>
      </tr>
    </thead>  

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <td class="time_td text-center">
            <% 8.upto(18).each do |hour| %>
              <div class="day_time">
                <span class="day_hour">
                  <%= Time.parse("#{hour}:00").strftime("%l %P") %>
                </span>
              </div>
            <% end %>
          </td>

          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
