<div class="row">
  <div class="col-4">
    <div class="to_do_head">
      <h2>今日待辦事項 <%= "#{@day.month}""-""#{@day.day}" %></h2>
    </div>
    <div class="to_do_body">
      <td class="time_td">
        <% 8.upto(18) do |hour| %>
          <div class="day_time">
            <%= Time.parse("#{hour}:00").strftime("%l %P") %>
          </div>
          <div id="hour-<%= hour %>" class="day_time">
            <% @todos.each do |todo| %>
              <%- if todo.start_time.hour.between?(hour, hour + 0.9) %>
                <%= link_to user_lesson_path(@user, todo) do %>
                  <%= todo.name %>
                <% end %>
              <% end -%>
            <% end %>
          </div>
        <% end %>
      </td>
    </div>
  </div>
</div>