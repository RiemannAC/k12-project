<div class="sidenav">
  <div class="side-avatar">
    <h1>使用者頭像</h1>  
  </div>

  <hr>
  <button class="dropdown-btn">
    <%= '我的科目' %>
    <%= fa_icon 'caret-down' %>
  </button>
  <div class="dropdown-container">
    <% @subject_tags.each do |subject| %>
      <%=link_to subject.name %>
    <% end %>
  </div>

  <!--第一個dropdown-->
  <button class="dropdown-btn">
    <%= '我的教材' %>
    <%= fa_icon 'caret-down' %>
  </button>
  <div class=dropdown-container>
    <%= link_to "- 新增教材" ,new_material_path  %>
    <button class="dropdown-btn">
      <%= "- 現有教材" %>
      <%= fa_icon 'caret-down' %>
    </button>
    <div class="dropdown-container">
      <% @subject_tags.each do |subject| %>
        <% if subject.materials.present? %>
          <button class="dropdown-btn">
            <%= "【" + subject.name + "】" %>
            <%= fa_icon 'caret-down' %>         
          </button>
          <div class="dropdown-container">
            <%= subject.materials.each do |material| %>
              <%= link_to material.mtrial_folder_name, material_path(material) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <button class="dropdown-btn">
    <%= '我的教案' %>
    <%= fa_icon 'caret-down' %>
  </button>
  <div class=dropdown-container>
    <%= link_to "- 新增教案" ,new_plan_path  %>
    <button class="dropdown-btn">
      <%= "- 現有教案" %>
      <%= fa_icon 'caret-down' %>
    </button>
    <div class="dropdown-container">
      <% @subject_tags.each do |subject| %>
        <% if subject.plans.present? %>
          <button class="dropdown-btn">
            <%= "【" + subject.name + "】" %>
            <%= fa_icon 'caret-down' %>         
          </button>
          <div class="dropdown-container">
            <%= subject.plans.each do |plan| %>
              <%= link_to plan.plan_folder_name, plan_path(plan) %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
    
  <button class="dropdown-btn">
    <%= '過往學期教學計畫' %>
    <%= fa_icon 'caret-down' %>
  </button>
  <div class="dropdown-container">
    
  </div>
     
</div>