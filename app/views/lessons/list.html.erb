<div class="row">
  <div class="col-12">
    <h1>使用者課程列表</h1>
    <hr>
    <%= link_to "<< 返回課表", user_lessons_path(@user) %>
    <br><br>
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>科目</th>
          <th>班級</th>
          <th>課程開始時間</th>
          <th>課程結束時間</th>
          <th colspan="3">#</th>
        </tr>
      </thead>

      <tbody>
        <% @lessons.each do |lesson| %>
          <tr>
            <td><%= lesson.name %></td>
            <td><%= lesson.grade %> <%= lesson.room %></td>
            <td><%= lesson.start_time.strftime("%Y-%m-%d") %></td>
            <td><%= lesson.end_time.strftime("%Y-%m-%d") %></td>
            <td><%= link_to '瀏覽', user_lesson_path(@user, lesson) %></td>
            <td><%= link_to '編輯', edit_user_lesson_path(@user, lesson) %></td>
            <td><%= link_to '刪除', user_lesson_path(@user, lesson), method: :delete, data: { confirm: '確定要刪除嗎?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

