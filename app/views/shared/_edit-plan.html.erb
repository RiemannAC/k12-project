<style>
  .field{
    width: 65%;
    margin: 10px auto;
  }

  .field.field-category{
    margin-bottom: -15px;
  }
</style>

<% if @plan.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @plan.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
  
<%= form_for [@user, @plan] do |f| %>
  <div class="field field-category">
  <%= f.label :subject_tag_id, "科目" %><br>
  <%= f.collection_select :subject_tag_id , SubjectTag.all, :id, :name, {prompt: true}, {class: "form-control"}  %><br>
  </div> 

  <div class="field">
  <%= f.label :plan_folder_name, "教學主題／單元" %><br>
  <%= f.text_field :plan_folder_name ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.submit class: 'btn btn-info' %>
  </div>

  <br>
    
  <div class="field">
    <%= link_to '<< 返回教案總覽', user_plans_path(@user) %>
  </div>

<% end %>
