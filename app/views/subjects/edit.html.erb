<div class="main-frame">
  <h1><%= @subject.name %>班級設定</h1>
  <hr class="yellow-hr">


  <% if @subject.errors.any? %>
    <h2>We have some errors here!</h2>
    <ul>
      <% @subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="form">
  <%= form_for [@user, @subject] do |f| %>
    <div class="form-group">
      <%= f.label :name, "科目" %>
      <%= f.text_field :name, placeholder: "ex. 國文" %>
    </div>
    
    <div class="form-group">
      <%= f.label :classroom, "班級名稱" %>  
      <%= f.text_field :classroom, placeholder: "ex. 三班" %>
    </div>
    <div class="form-group">
      <%= f.label :students, "班級人數" %>
      <%= f.number_field :students %>
    </div>
    

    <div class="form-group">
      <%= f.submit "完成班級設定", class: 'btn btn-info' %>
    </div>

    <%= link_to '<< 班級列表', user_subjects_path(@user) %>

  </div>

  <% end %>
</div>