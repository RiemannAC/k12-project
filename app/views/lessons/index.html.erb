<div class="row">
  <div id="lessons_calendar" class="col-9" style="padding-left:15px;">
    <div class="index-right-container">
      <%= link_to 'Listing lessons', list_user_lessons_path(@user) %>

        <div class="row">
          <div class="col-12 m-auto">
            <h2 class="text-center">我的一週課表</h2>
            <hr>
            <%= week_calendar events: @lessons do |date, lessons| %>
              <% 8.upto(18).each do |hour| %>
                <div id="hour-<%= hour %>" class="day_time">
                  <% lessons.each do |lesson| %>
                    <%- if lesson.start_time.hour.between?(hour, hour + 0.9) %>
                      <%= link_to user_lesson_path(@user, lesson) do %>
                        <%= lesson.name %>
                      <% end %>
                    <% end -%>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <div class="pull-right">
        <%= link_to new_user_lesson_path(@user) do %>
          <i class="fa fa-plus-circle" style="font-size: 80px; color: #A3A3A3; margin-right: 100px;"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div id="lessons_calendar_2" class="col-3" style="margin-top:-5px;">
    <div class="index-left-container">
      <%# 右上月曆 %>
      <div class="row">
        <div class="col-4">
          <%= month_calendar events: @lessons do |date, lessons| %>
            <%= date.day %>
          <% end %> 
        </div>
      </div>
      <%# ToDo List V2 %>
      <%= render 'to_do_list' %>
    </div>
  </div>
</div>