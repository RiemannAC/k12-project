<%= stylesheet_link_tag "calendar/calendar-style.css" %>
<%= stylesheet_link_tag "calendar/fullcalendar.css" %>
<%= stylesheet_link_tag "calendar/bootstrap.min.css" %>

<%= javascript_include_tag "js/vendor/jquery.min.js" %>
